<script>
   $(".cities_create").click(function () {
      Modalka.fire({
         showConfirmButton: false,
         showCloseButton: true,
         heightAuto: false,
         html: `
           <div class="flex items-center justify-between">
             <h1 class="title_without_margin">Добавление города</h1>
           </div>
           <div class="px-1">
               <%= form_for @conn, Routes.admin_setting_path(@conn, :create_city), fn f -> %>
                  <label class="label_input pos">Полное название города</label>
                  <%= text_input f, :name, class: "input_full", required: "true" %>

                  <label class="label_input pos">Короткое название города</label>
                  <%= text_input f, :short_name, class: "input_full input_text_uppercase" %>

                  <label class="label_input pos">Название города на английском (пример: almaty)</label>
                  <%= text_input f, :eng_name, class: "input_full" %>
                  
                  <%= submit "Добавить", class: "btn_save pos mt-2" %>
               <% end %>
           </div>
         `,
      })
   })
</script>
