<div class="login-container">
  <div class="round">
    <a href="/"><img src="/images/logo.svg" class="logo-login" alt=""></a>
    <div class="login-title">Авторизация в системе администратора</div>
    <%= form_for @conn, Routes.admin_path(@conn, :login_form_submit), fn f -> %>
      <div class="form-group">
        <img src="/images/icons/user.png" alt="">
        <%= text_input f, :login, placeholder: "Email", class: "input-login", required: "true" %>
      </div>

      <div class="form-group">
        <img src="/images/icons/password.png" alt="">
        <%= password_input f, :password, placeholder: "Пароль", class: "input-login", required: "true" %>
      </div>

      <div class="form-group">
        <%= submit "Войти в систему", class: "btn-login" %>
      </div>
      <% end %>
  </div>
</div>

<style>
  .login-container {
    left: 0;
    top: 0;
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100vw;
    background-color: #3689ce;
  }

  .round {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    border-radius: 100%;
    min-width: 600px;
    min-height: 600px;
    z-index: 1 !important;
  }

  .form-group {
    display: flex;
    justify-content: space-between;
    padding-bottom: 20px;
    font-family: 'Montserrat', sans-serif;
  }

  .form-group label {
    margin-right: 40px;
    display: flex;
    justify-content: start;
  }

  .login-title {
    color: #7e7e7e;
    text-transform: uppercase;
    font-weight: 500;
    padding: 30px 0;
  }

  .input-login {
    height: 56px;
    margin-left: -5px;
    padding: 0 10px;
    background-color: #f3f3f3;
    border: none;
    outline: none;
    border-radius: 10px;
  }

  .input-login:focus {
    outline: none;
    border: none;
  }

  .btn-login {
    color: #7e7e7e;
    text-transform: uppercase;
    font-weight: 700;
    margin: 0 auto;
    color: #fff;
    border: none;
    width: 100%;
    background-color: #3689ce;
    padding: 8px 25px;
    border-radius: 10px;
  }
</style>