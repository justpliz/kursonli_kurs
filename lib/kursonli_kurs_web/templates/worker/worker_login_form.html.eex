<div class="login-container">
  <div class="round">
    <a href="/"><img src="/images/logo.svg" class="logo-login" alt=""></a>
    <div class="login-title"><%= gettext("Авторизация в системе") %></div>
    <%= form_for @conn, Routes.worker_path(@conn, :login_form_submit), fn f -> %>
      <div class="form-group">
        <img src="/images/icons/user.png" alt="">
        <%= text_input f, :first_name, placeholder: gettext("Имя сотрудника"), class: "input-login", value: @user.first_name,
          required: "true" %>
      </div>

      <div class="form-group">
        <img src="/images/icons/user.png" alt="">
        <%= telephone_input f, :phone, placeholder: gettext("Телефон сотрудника"), class: "input-login", value: @user.phone,
          data: [tel: "" ], maxlength: 18, required: "true" %>
      </div>

      <div class="form-group">
        <img src="/images/icons/user.png" alt="">
        <%= text_input f, :email, placeholder: "Email", class: "input-login", value: @user.email, required: "true" %>
      </div>

      <div class="form-group">
        <img src="/images/icons/password.png" alt="">
        <%= password_input f, :password, placeholder: gettext("Пароль"), class: "input-login", required: "true" %>
      </div>

      <div class="form-group">
        <%= submit gettext("Войти в систему"), class: "btn-login" %>
      </div>
      <% end %>
  </div>
</div>

<script>
  localStorage.removeItem("worker")
</script>

<style>
  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100vw;
    background-color: #3689ce;
  }

  .round {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    border-radius: 100%;
    height: 700px;
    width: 700px;
    min-width: 700px;
    min-height: 700px;
    z-index: 1 !important;
  }

  .form-group {
    display: flex;
    justify-content: space-between;
    padding-bottom: 20px;
    font-family: 'Montserrat', sans-serif;
  }

  .form-group label {
    margin-right: 40px;
    display: flex;
    justify-content: start;
  }

  .login-title {
    color: #7e7e7e;
    text-transform: uppercase;
    font-weight: 500;
    padding: 30px 0;
  }

  .input-login {
    height: 56px;
    margin-left: -5px;
    padding: 0 10px;
    background-color: #f3f3f3;
    border: none;
    outline: none;
    border-radius: 10px;
  }

  .input-login:focus {
    outline: none;
    border: none;
  }

  .btn-login {
    color: #7e7e7e;
    text-transform: uppercase;
    font-weight: 700;
    margin: 0 auto;
    color: #fff;
    border: none;
    width: 100%;
    background-color: #3689ce;
    padding: 8px 25px;
    border-radius: 10px;
  }

  @media (max-width: 1540px) {
    .login-container {
      overflow-y: hidden;
    }

    .round {
      width: 500px;
      height: 500px;
      min-width: 500px;
      min-height: 500px;
      padding: 20px;
    }

    .form-group {
      padding: 0;
      margin: 10px 0;
    }

    .logo-login {
      width: 150px;
      height: auto;
      object-fit: contain;
    }

    .login-title {
      font-size: 14px;
      padding: 10px 0;
    }

    .form-group img {
      height: 40px;
    }

    .input-login {
      font-size: 14px;
      height: 40px;
    }

    .btn-login {
      padding: 6px 25px;
      font-size: 14px;
    }
  }

  @media (max-width: 600px) {
    .round {
      width: 100%;
      border-radius: 0;

    }
  }
</style>